#Part 5 Ex 1
#Number of lines
def countLines(name):
	with open(name, "r") as f:	
		a = f.readlines() 
		print len(a)
#countLines("Fail")

#Number of characters
def countChars(name):
	with open(name, "r") as f:	
		print len(str(f.read()))
#countChars("Fail")

def test(name):
	countLines(name)
	countChars(name)
#test("Fail")
